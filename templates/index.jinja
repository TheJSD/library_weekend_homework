{% extends 'base.jinja' %}
{% block content %}
    <h1>{{ title }}</h1>
    <div>
        {% for book in books %}
        <p><a href="/library/{{loop.index}}">{{ book.title }}</a>
            <ul>
                <li>Author: {{ book.author }}</li>
                <li>Genre: {{ book.genre }}</li>
            </ul>
        </p>
    {% endfor %}
    </div>
{% endblock content %}